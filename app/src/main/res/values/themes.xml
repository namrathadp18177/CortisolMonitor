<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light/White Theme -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background and surface colors -->
        <item name="backgroundColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Button colors -->
        <item name="buttonColor">@color/primary</item>
        <item name="buttonTextColor">@color/white</item>
        
        <!-- Icon tint -->
        <item name="iconTint">@color/primary</item>

        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Radio button style -->
        <item name="radioButtonStyle">@style/RadioButtonStyle.Light</item>
        
        <!-- Material Components styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <!-- Dark/Black Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background and surface colors -->
        <item name="backgroundColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        
        <!-- Button colors -->
        <item name="buttonColor">@color/primary</item>
        <item name="buttonTextColor">@color/white</item>
        
        <!-- Icon tint -->
        <item name="iconTint">@color/primary</item>

        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Radio button style -->
        <item name="radioButtonStyle">@style/RadioButtonStyle.Dark</item>
    </style>

    <!-- Custom styles for Material Components -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxBackgroundColor">@color/input_background</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <!-- Radio Button Styles -->
    <style name="RadioButtonStyle.Light" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="buttonTint">@color/primary</item>
    </style>

    <style name="RadioButtonStyle.Dark" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/primary</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="buttonTint">@color/primary</item>
    </style>

    <!-- Custom popup theme for toolbar menu -->
    <style name="Widget.App.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:background">@color/surface</item>
    </style>
</resources>